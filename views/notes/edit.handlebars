{{#each errors}}
<div class="alert alert-danger">{{text}}</div>
{{else}}
{{/each}}
<div class="card card-body">
  <h3>Edit Note</h3>
  <form action="/notes/{{note.id}}?_method=PUT" method="post">
    <input type="hidden" name="_method" value="PUT">
    <div class="form-group">
      <input type="text" class="form-control" name="title" placeholder="Note Title" required value="{{note.title}}">
    </div>
    <div class="form-group">
      <textarea type="text" class="form-control" name="details" rows="15" placeholder="Note Details" required>{{note.details}}</textarea>
    </div>
    <button class="btn btn-secondary btn-block" type="submit">Submit</button>
  </form>
</div>